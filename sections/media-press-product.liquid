{%- capture flickity_options -%}
{
  "prevNextButtons": true,
  "wrapAround": true,
  "dragThreshold": 16,
  "groupCells": true,
  "pageDots": true,
  "autoPlay": 5000,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}


<section class="Section Section--spacingNormal TestimonialList--carousel media-press" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="testimonials"> 
    <header class="SectionHeader SectionHeader--center">
      <div class="Container">
      {%- if section.settings.title != blank -%}
        <h3 class="SectionHeader__SubHeading Heading u-h1">{{ section.settings.title | escape }}</h3>
      {%- endif -%}
      </div>
    </header>
    <div class="TestimonialList Carousel Carousel--fadeIn" data-flickity-config='{{ flickity_options }}'>
      {%- for block in section.blocks -%}
        <div class="Carousel__Cell Testimonial" data-slide-index="{{ forloop.index0 }}">
          <div class="Container">
            <a href="{{ block.settings.press_link }}" target="_blank">
            	<img class="Press__Logo lazy2" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR42mNkYAAAAAYAAjCB0C8AAAAASUVORK5CYII=" data-src="{{ block.settings.image | img_url: '1512x' }}" data-mobsrc="{{ block.settings.image | img_url: '540x' }}" alt="Slide {{ forloop.index }}">
            </a>
          </div>
        </div>
      {%- endfor -%}
    </div>
</section>
