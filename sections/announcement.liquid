<script type="lazyload2" data-src="{{ 'flickity.pkgd.min.js' | asset_url }}"></script>

{% assign today =  "now" | date: "%s" | date: "%a" %}
{% if today == 'Wed' %}
  <a href="/discount/SUNDAYSALE7?redirect=/collections/wedding-evening-partywear-collection" target="_blank">
    <div class="AnnouncementBar topBar sunday-sale" style="font-weight: bold;width:100%;position:fixed;top:0;z-index: 9999;color: #000;line-height: normal;background: lightgrey">
      <p class="AnnouncementBar__Content" style="text-transform: uppercase;font-size: 14px;padding: 10px 0px !important;display:flex;align-items:center;height: 48px;">
        <marquee direction="left"><span style="color: black">Every Wednesday Get 12% off  on Wedding/Evening/Partywear Collection. Use Coupon Code : WED12 <button style="padding: 5px;border: 1px solid lightgrey;font-size: 14px;background: black;color:white;">SHOP COLLECTION</button></a></marquee>
      </p>
    </div>
  </a>
{% endif %}

{% if today == 'Fri' %}
  <div class="AnnouncementBar topBar friday-sale" style="font-weight: bold;background: maroon;width:100%;position:fixed;top:0;z-index: 9999;color: #fff;line-height: normal;">
    <p class="AnnouncementBar__Content" style="text-transform: uppercase;font-size: 14px;padding: 10px 0px !important;display:flex;align-items:center;height: 39px;">
      <marquee direction="left">Get 15% Off Every Friday. Use Coupon code: FRENCH<span style="color: #f6f310">FRI</span>15</marquee>
    </p>
  </div>
{% endif %}

{% if today == 'Sun' %}
  <a href="/discount/SUNDAYSALE7?redirect=/collections/sale-all" target="_blank">
    <div class="AnnouncementBar topBar sunday-sale" style="font-weight: bold;background: yellow;width:100%;position:fixed;top:0;z-index: 9999;color: #000;line-height: normal;">
      <p class="AnnouncementBar__Content" style="text-transform: uppercase;font-size: 14px;padding: 10px 0px !important;display:flex;align-items:center;height: 51px;">
        <marquee direction="left"><span style="color: red">SUNDAY SALE : </span>Get Upto 70% off Every Sunday. Also Get additional 7% off by using Coupon Code : Sunday<span style="color: red">Sale</span>7 <button style="padding: 5px;border: 1px solid;font-size: 14px;background: #000;color:yellow;">SHOP SUNDAY SALE</button></a></marquee>
      </p>
    </div>
  </a>
{% endif %}

