{%if section.settings.topbarText != blank %}
<section {% if today == 'Fri' %}style="margin-top: 39px"{% elsif today == 'Sun' or today == 'Wed' %}style="margin-top: 48px"{% endif %} {% if today == 'Fri' or today == 'Sun' or today == 'Wed' %}class="section-top-bar"{% endif %}>
  <div class="AnnouncementBar topBar" style="font-weight: bold;">
      <p class="AnnouncementBar__Content">
        <marquee direction="left">{{ section.settings.topbarText}}</marquee>
      </p>
  </div>
</section>
{% endif %}

    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="announcement-bar" {% if today == 'Fri' %}style="margin-top: 39px"{% elsif today == 'Sun' or today == 'Wed' %}style="margin-top: 48px"{% endif %} {% if today == 'Fri' or today == 'Sun' or today == 'Wed' %}class="section-top-bar"{% endif %}>
      
      
      <div class="AnnouncementBar">
        <div class="AnnouncementBar__Wrapper">
          {%- for block in section.blocks -%}
          <div id="Slide{{ block.id }}" class="Slideshow__Slide Carousel__Cell">
            <p class="AnnouncementBar__Content Heading">
              {%- if block.settings.link -%}
              <a href="{{ block.settings.link }}">{{ block.settings.content }}</a>
              {%- else -%}
              {{ block.settings.content }}
              {%- endif -%}
            </p>
          </div>
          {%- endfor -%}
        </div>
      </div>
    </section>

    <style>
      #section-{{ section.id }} {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }
    </style>

    <script type="lazyload2">
      document.documentElement.style.setProperty('--announcement-bar-height', document.getElementById('shopify-section-announcement').offsetHeight + 'px');
      $('.AnnouncementBar__Wrapper').flickity({
        // options
        cellAlign: 'left',
        contain: true,
        pageDots: false,
        wrapAround: true,
        autoPlay: 5000,
        prevNextButtons: true,
      });
    </script>
  {%- endunless -%}
{%- endif -%}


{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": false
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
        "type": "header",
      "content": "TopBar"

    },
    {
        "type": "text",
        "id": "topbarText",
        "label": "TopBar content",
        "default": "Secure Payment with PayPal | Free shipping | 60 Days free Returns"
    }
  ],
  "blocks": [
  {
    "type": "Slider",
    "name": "text",
    "settings": [
      {
        "type": "text",
        "id": "content",
        "label": "Text",
        "default": "Buy any 2 products and get 10% off"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
  ]
  }]
}
{% endschema %}