$bannerBackground: {{ settings.main_banner_text_bg }};
$bannerTextColor: {{ settings.main_banner_text_color }};
$bannerFontMobile: {{ settings.banner_text_font_small }}px;
$bannerFontDesktop: {{ settings.banner_text_font_large }}px;

$afterDiscountBg: {{ settings.after_discount_bg }};
$beforeDiscountBg: {{ settings.before_discount_bg }};
$afterDiscountColor: {{ settings.after_discount_color }};
$beforeDiscountColor: {{ settings.before_discount_color }};
$discountFontsizeMobile: {{ settings.discount_text_font_small }}px;
$discountFontsizeDesktop: {{ settings.discount_text_font_large }}px;

.mm__loader {  
  top: 0;
  left: 0;
  right: 0;
  bottom: 0; 
  display: none;
  z-index: 1000;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  
  .mm__loader--text {
    top: 50%;
    left: 50%;      
    color: #ffffff;
    font-size: 16px;
    position: fixed;
    line-height: 1.4em;
    padding: 12px 30px;
    text-align: center;
    border-radius: 5px;
    background: #000000;    
    -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
  }
}
.mm__banner {
  display: block;
  text-align: center;
  padding: 30px 20px;
  background: $bannerBackground;

  h2 {    
    font-weight: 600;
    line-height: 1.4em;
    letter-spacing: 1px;    
  	color: $bannerTextColor;
    font-size: $bannerFontDesktop;
  }

  @media only screen and (max-width: 949px) {
    padding: 20px;
    
    h2 {
      font-size: $bannerFontMobile;
    }
  }
  @media only screen and (max-width: 749px) {
    padding: 10px;
  }
}

.mm__discount {  
  font-size: $discountFontsizeDesktop;
  padding: 1em 0.75em;
  border-radius: 5px;  
  text-align: center;
  margin: 0 0 10px;  
  font-weight: bold;
  
  @media only screen and (max-width: 949px) {
  	font-size: $discountFontsizeMobile;
  }
  
  &.mm__discount--cod {
    background: $beforeDiscountBg;
    color: $beforeDiscountColor;
  }
  &.mm__discount--prepaid {
    background: $afterDiscountBg;
    color: $afterDiscountColor;
  }
}


