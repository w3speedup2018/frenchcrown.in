{% comment %} <script>
    dataLayer.push({
      'event': 'begin_checkout',
      'ecommerce': {
        'currency': '{{ shop.currency }}',
        'totalValue': '{{ checkout.total_price | money_without_currency | remove:',' }}',
        'items': [
    	    {%- for line_item in checkout.line_items -%}
    	      {
    	      'item_id': '{{ line_item.sku || line_item.product_id }}',
    	      'item_name': '{{ line_item.product.title }}',
    	      'discount': {{ line_item.line_level_total_discount | divided_by: 100.00 }},
    	      'item_variant': '{{ line_item.variant.title }}',
    	      'price': {{ line_item.final_price | divided_by: 100.00 }},
    	      'quantity': {{ line_item.quantity }}
    	      },
    	    {% endfor %}
        ]
      }
    });
</script> {% endcomment %}
