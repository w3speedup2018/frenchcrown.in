{%- assign fabric_tag_lists = '' %}
{%- if collection.handle contains 'women' %}
  {%- if collection.handle contains 'shirt' or collection.handle contains 'top' or collection.handle contains 'jacket' or collection.handle contains 'suit' or collection.handle contains 'blazer' or collection.handle contains 'pant' or collection.handle contains 'sale' or collection.handle contains 'new' or collection.handle contains 'all' -%}
    {%- assign fabric_tag_lists = section.settings.woman_top_fabric_taglist | split: ',' -%}
  {%- elsif collection.handle contains 'dress' -%}
    {%- assign fabric_tag_lists = section.settings.woman_western_fabric_taglist | split: ',' -%}
  {% endif %}
{%- endif -%}

{%- if fabric_tag_lists != empty -%}
  <div class="Collapsible Collapsible--padded Collapsible--autoExpand shirt-size">
    <button type="button" class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">
      Fabric <span class="Collapsible__Plus"></span>
    </button>
    <div class="Collapsible__Inner">
      <div class="Collapsible__Content">
        <ul class="Linklist">
          {%- for tag_name in fabric_tag_lists -%}
          {%- assign tag_value = tag_name | handleize -%}
            <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
              <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                {{- tag_name -}}
              </button>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
{% endif %}
{%- if collection.handle contains 'socks' and section.settings.socks_fabric_taglist != empty -%}       
    <div class="Collapsible Collapsible--padded Collapsible--autoExpand jeans-size">
      <button type="button" class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">
       {{ section.settings.fabric_title }} <span class="Collapsible__Plus"></span>
      </button>
      <div class="Collapsible__Inner">
        <div class="Collapsible__Content">
          <ul class="Linklist">
            {%- assign  size_tag_lists = section.settings.socks_fabric_taglist | split: ','  -%}
            {%- for tag_name in size_tag_lists -%}
            {%- assign tag_value = tag_name | handleize -%}
            <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
              <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                {{- tag_name -}}
              </button>
            </li>                      
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div> 
{%- endif -%}
{%- unless collection.handle contains 'jeans' or collection.handle contains 'face-masks' or collection.handle contains 'belts' or collection.handle contains 'accessories' or collection.handle contains 'wallets' or collection.handle contains 'footwear' or collection.handle contains 'socks' or collection.handle contains 'perfumes' or collection.handle contains 'women' or collection.handle contains "sherwani-sets-wedding-engagement" or collection.handle contains "jodhpuri-sets-wedding-engagement" or collection.handle contains "indowestern-sets-wedding-engagement" or collection.handle contains "kurta-sets-wedding-engagement" or collection.handle contains 'kurta-jacket-sets-wedding-engagement' or collection.handle contains 'kurta-jackets' or collection.handle contains 'wedding-engagement' or collection.handle contains 'co-ords' -%}
  {%- if section.settings.fabric_taglist != empty -%}
  <div class="Collapsible Collapsible--padded Collapsible--autoExpand">
    <button type="button" class="Collapsible__Button Heading u-h6" data-action="toggle-collapsible" aria-expanded="false">
      {{ section.settings.fabric_title }} <span class="Collapsible__Plus"></span>
    </button>

    <div class="Collapsible__Inner">
      <div class="Collapsible__Content">
        <ul class="Linklist">
          {%- assign  fabric_tag_lists = section.settings.fabric_taglist | split: ','  -%}
          {%- for tag_name in fabric_tag_lists -%}
            {%- assign tag_value = tag_name | handleize -%}
			{%- if collection.handle contains 'suits' %}
            	{%- unless tag_value == 'tencel' -%}
          			<li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                      <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                        {{- tag_name -}}
                      </button>
                    </li>
          		{% endunless %}
            {%- elsif collection.handle contains 'lounge-pants' -%}
          		{%- unless tag_value == 'wool' or tag_value == 'wool-blend' or tag_value == 'poly-viscose-rayon' or tag_value == 'terry-rayon' -%}
                  <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                    <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                      {{- tag_name -}}
                    </button>
                  </li>
				{%- endunless %}
          	{%- elsif collection.handle contains 'pants' %}
            	{%- unless tag_value == 'tencel' or tag_value == 'polyester' -%}
          			<li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                      <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                        {{- tag_name -}}
                      </button>
                    </li>
          		{% endunless %}
          
          	{%- elsif collection.handle contains 'blazers' -%}
          		<li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                  <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                    {{- tag_name -}}
                  </button>
                </li>
          
            {%- elsif collection.handle contains 'waistcoats' -%}
          		{%- unless tag_value == 'wool' or tag_value == 'wool-blend' or tag_value == 'polyester' -%}
                  <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                    <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                      {{- tag_name -}}
                    </button>
                  </li>
				{%- endunless %}
                
          	{%- elsif collection.handle contains 'tshirts' -%}
          		{%- if tag_value == 'cotton' -%}
          			{%- unless tag_value == 'polyester' -%}
                      <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                        <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                          {{- tag_name -}}
                        </button>
                      </li>
          			{%- endunless %}
                {% endif %}
            {%- elsif collection.handle contains 'sale' -%}
                  <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                    <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                      {{- tag_name -}}
                    </button>
                  </li>
            
          	
            {% else %}
                {%- unless tag_value == 'poly-viscose-rayon' or tag_value == 'terry-rayon' or tag_value == 'wool' or tag_value == 'wool-blend' or tag_value == 'polyester' -%}
                  <li class="Linklist__Item {% if current_tags contains tag_value %}is-selected{% endif %}">
                    <button type="button" class="Link Link--primary Text--subdued {% if current_tags contains tag_value %}is-active{% endif %}" data-tag="{{ tag_value }}" data-action="toggle-tag">
                      {{- tag_name -}}
                    </button>
                  </li>
                {%- endunless %}
            {% endif %}

          {%- endfor -%}
        </ul>
      </div>
    </div>
  </div>
  {%- endif -%}
{%- endunless -%}