    StoreBundleBase.shop = Shopify.shop;
    StoreBundleBase.unique_name = Shopify.shop.split('.')[0];
    StoreBundleBase.isProductPage = false;
    StoreBundleBase.isCartPage = false;
    StoreBundleBase.isCollectionPage = false;
    StoreBundleBase.isFrontPage = false;
    StoreBundleBase.apiVersion = "2021-07";
    StoreBundleBase.shopData = {"currency":{"name":"INR","money_format":"Rs. {@amount@}","symbol":"Rs. ","money":{"format":"Rs. {@amount@}","with_currency_format":"Rs. {@amount@}"},"epc":["INR"],"country":{"name":"India","iso2":"IN"}},"meta":{"weight_unit":"kg","pwd":false,"timezone":{"full":"(GMT+05:30) Asia\/Kolkata","slim":"Asia\/Kolkata"}}};
