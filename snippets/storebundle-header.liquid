    {% if request.page_type == 'index' %}
        StoreBundleBase.isFrontPage = true;
    {% endif %}

    {% if request.page_type == 'collection' or request.page_type == 'list-collections' %}
        StoreBundleBase.isCollectionPage = true;
    {% endif %}


