        {%- include 'pajama-size'-%}
    {%- elsif product.type == 'Woman Suit'-%}
        {%- include 'women-bottom-size'-%}
    {%- elsif product.type == 'Sherwani Pajama' or product.type == 'Jodhpuri Pajama' or product.type == 'Indowestern Pajama' or product.type == 'Wedding kurta Pajama' or product.type == 'Sherwani Dhoti' or product.type == 'Jodhpuri Dhoti' or product.type == 'Indowestern Dhoti' or product.type == 'Wedding kurta Dhoti'  or product.type == 'Wedding Kurta Koti Lounge Pant' or product.type == 'Wedding Kurta Koti Churi Pant' or product.type == 'Wedding Kurta Indowestern Lounge Pant' or product.type == 'Wedding Kurta Indowestern Churi Pant' or product.type == 'Wedding Kurta Sherwani Lounge Pant' or product.type == 'Wedding Kurta Sherwani Churi Pant' or product.type == 'Indowestern Lounge Pant' or product.type == 'Indowestern Churi Pant' -%}
    	{%- include 'bottom-size'-%}
    {%- endif -%}
  </div>
</div>