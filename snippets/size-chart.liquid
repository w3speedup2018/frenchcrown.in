      <a class="close"> X </a>
    </div>
    {%- if product.type == 'Suit' or product.type == 'Trenchcoat Suit' or product.type == 'Shirt Trouser'-%}
    	{%- include 'trousers-size'-%}
    {%- elsif product.type == 'Shirt Short' or product.type == 'Tshirt Short' or product.type == 'Jacket Short'-%}
        {%- include 'shorts-size'-%}
